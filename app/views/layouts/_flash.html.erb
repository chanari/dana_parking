<% if flash.present? %>
<script type="text/javascript">
  <% flash.each do |message_type, message| %>
    <% if ['notice', 'success'].include? message_type %>
      alertify.success("<%= message %>");
    <% elsif ['error', 'errors', 'alert'].include? message_type %>
      alertify.error("<%= message %>")
    <% else %>
      alertify.<%= message_type %>("<%= message %>")
    <% end %>
  <% end %>
</script>
<% end %>
