<style media="screen">
  .content-w3ls {
    margin-top: 60px;
  }
</style>

<div class="content-w3ls">
  <div class="content-agile1">
  </div>
  <div class="content-agile2">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-control w3layouts">
      <%= f.email_field :email, autofocus: true, placeholder: 'Tài khoản Email' %>
    </div>

    <div class="form-control agileinfo">
      <%= f.password_field :password, placeholder: 'Mật khẩu' %>
    </div>

    <div class="form-control agileinfo">
      <%= f.password_field :password_confirmation, placeholder: 'Xác nhận mật khẩu' %>
    </div>

    <%= f.submit "Đăng Ký", class: 'register' %>
    <% end %>
  </div>
  <div class="clear"></div>
</div>
