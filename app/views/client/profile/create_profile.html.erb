<h2 class="text-center" style="margin-top: 10px;">Cập nhật thông tin</h2>
<div class="container h-100" style="margin-top: 20px;">
  <div class="row align-items-center h-100">
    <div class="col-9 mx-auto">
      <div class="jumbotron" style="padding: 30px;">
        <%= form_for @profile, url: client_profile_path, method: :put do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>
          <div class="form-group">
            <%= f.label :first_name, 'Họ:' %>
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :last_name, 'Tên:' %>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :phone, 'Số điện thoại:' %>
            <%= f.text_field :phone, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :address, 'Địa chỉ:' %>
            <%= f.text_field :address, class: 'form-control' %>
          </div>
          <%= f.submit "Cập nhật", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
