<div id="wrapper">

  <%= render 'layouts/admin/sidebar' %>

  <div id="content-wrapper">

    <div class="container-fluid">

      <%= render 'layouts/admin/menu' %>

      <!-- Area Chart Example-->
      <div class="card mb-3">
        <div class="card-header">
          <i class="fas fa-id-card fa-lg"></i> |
          Thông tin tài khoản
        </div>
        <div class="card-body">
          <div class="col-8">
            <%= form_for @profile, url: update_profile_admin_managers_path, method: :patch, html: { class: 'admin_profile' } do |f| %>
            <%= f.hidden_field :user_id %>
            <div class="form-group">
              <%= f.label :first_name, 'Họ' %>
              <%= f.text_field :first_name, class: 'form-control', readonly: true %>
            </div>
            <div class="form-group">
              <%= f.label :last_name, 'Tên' %>
              <%= f.text_field :last_name, class: 'form-control', readonly: true %>
            </div>
            <div class="form-group">
              <%= f.label :phone, 'Số điện thoại' %>
              <%= f.text_field :phone, class: 'form-control', readonly: true %>
            </div>
            <div class="form-group">
              <%= f.label :address, 'Địa chỉ' %>
              <%= f.text_field :address, class: 'form-control', readonly: true %>
            </div>
            <div id="div-update" class="form-group" style="display: none;">
              <%= f.submit "Cập nhật", class: 'btn btn-primary' %>
              <button class="btn btn-secondary btn-cancel" style="margin-left: 15px;">Hủy</button>
            </div>
            <div id="div-change" class="form-group">
              <button class="btn btn-info btn-change">Thay đổi</button>
            </div>
            <% end %>
          </div>
        </div>
      </div>


    </div>

    <footer class="sticky-footer">
      <div class="container my-auto">
        <div class="copyright text-center my-auto">
          <span>Copyright © Your Website 2019</span>
        </div>
      </div>
    </footer>

  </div>

</div>
