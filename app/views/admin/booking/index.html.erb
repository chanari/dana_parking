<div id="wrapper">

  <%= render 'layouts/admin/sidebar' %>

  <div id="content-wrapper">

    <div class="container-fluid">

      <%= render 'layouts/admin/menu' %>

      <div class="card mb-3">
        <div class="card-header">
          <i class="fas fa-chart-area"></i>
          Thống Kê
        </div>
        <div class="card-body">
          <div class="container">
            <div class="row">
              <div class="col-3">
                <label for="park">Bãi:</label>
                <select id="park" class="form-control" name="park">
                  <option value="0">Tất cả</option>
                  <% @parks.each do |p| %>
                  <option value="<%= p[1] %>"><%= p[0] %></option>
                  <% end %>
                </select>
              </div>
              <div class="col-2">
                <label>Thuê theo:</label>
                <div class="form-check">
                  <input type="radio" class="form-check-input" id="all" name="type" checked>
                  <label class="form-check-label" for="all">Tất cả</label>
                </div>
                <div class="form-check">
                  <input type="radio" class="form-check-input" id="months" name="type">
                  <label class="form-check-label" for="months">Theo tháng</label>
                </div>
                <div class="form-check">
                  <input type="radio" class="form-check-input" id="days" name="type">
                  <label class="form-check-label" for="days">Theo giờ</label>
                </div>
              </div>
              <div class="col-3">
                <label>Từ:</label>
                <input id="datepicker1" class="form-control">
              </div>
              <div class="col-3">
                <label>Đến:</label>
                <input id="datepicker2"class="form-control">
              </div>
              <div class="col-1">
                <br>
                <button class="btn btn-info" style="margin-left: 0px; width: 75px;">Xem</button>
              </div>

            </div>

            <hr>
            <h4 class="text-center">Thống Kê</h4>

            <div class="form-group">
              <div class="row">
                <div class="col-12">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">BKS</th>
                        <th scope="col">Ngày vào</th>
                        <th scope="col">Ngày ra</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th scope="row">1</th>
                        <td>Mark</td>
                        <td>Otto</td>
                        <td>@mdo</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>

    </div>

  </div>

</div>
